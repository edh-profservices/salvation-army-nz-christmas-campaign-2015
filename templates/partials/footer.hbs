    }
    var shareURLs = {
      'facebook': "http://www.facebook.com/sharer.php?u={url}&title={title}",
      'twitter': "https://twitter.com/share?url={url}&text={title}",
    }
    var shareURL = "http://www.amyschristmas.org.nz";
    var shareTitle = "Help light up Amyâ€™s Christmas Tree";

    function sharePopup(type, config) {
      url = shareURLs[type];
      url = url.replace('{url}', shareURL);
      url = url.replace('{title}', shareTitle);

      if (topWindow === '') {
        var windowTop  = window.screenTop ? window.screenTop : window.screenY;
        var windowLeft = window.screenLeft ? window.screenLeft : window.screenX;

        var windowHeight = window.innerHeight;
        var windowWidth = window.innerWidth;
      } else {
        var windowTop = topWindow['windowTop'];
        var windowLeft = topWindow['windowLeft'];

        var windowHeight = topWindow['windowHeight'];
        var windowWidth = topWindow['windowWidth'];
      }

      config.top  = windowTop + ((windowHeight / 2) - (config.height / 2));
      config.left = windowLeft + ((windowWidth / 2) - (config.width / 2));

      config = JSON.stringify(config);
      config = config.replace('{', '');
      config = config.replace('}', '');
      config = config.replace(/"/gi, '');
      config = config.replace(/:/gi, '=');

      var windowRef = window.open(url, 'shareWindow', config);
    }
