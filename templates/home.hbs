{{> header }}
  <div class="main-wrapper">
    <div class="main-banner">
      {{{ prismic.homePage.results.[0].data.banner.html }}}
    </div>

    {{> funds-raised }}

    <div class="row">
      <div class="intro">
        <div class="intro__header">
          <div class="intro__title">
            {{{ prismic.homePage.results.[0].data.title.html }}}
          </div>
          <div class="intro__subtitle">
            {{{ prismic.homePage.results.[0].data.subtitle.html }}}
          </div>
        </div>
        <div class="intro__body">
          {{{ prismic.homePage.results.[0].data.short_lede.html }}}
        </div>
        <div class="intro__footer">
          <a href="#" class="btn btn--tertiary share-btn">
            <i class="fa fa-share-square-o"></i> Share this campaign
          </a>
        </div>
      </div>

      <div class="calls-to-action">
        <div class="social-proof">
          <div class="donations stat">
            <div class="stat__value">1,139</div>
            <div class="stat__label">Donations</div>
          </div>
          <div class="supporters stat">
            <div class="stat__value">882</div>
            <div class="stat__label">Supporters</div>
          </div>
          <div class="days-remaining stat">
            <div class="stat__value">19</div>
            <div class="stat__label">Days Remaining</div>
          </div>
        </div>
        <a href="#" class="donate-btn btn btn--lg btn--block">Donate Now</a>
        <a href="#" class="register-btn btn btn--lg btn--block btn--tertiary">Register Now</a>
      </div>
    </div>

    <hr>

    <div class="row">
      <div class="user-content">
        {{{ prismic.homePage.results.[0].data.content.html }}}
      </div>

      {{> sidebar }}
    </div>
  </div>
{{> footer }}
